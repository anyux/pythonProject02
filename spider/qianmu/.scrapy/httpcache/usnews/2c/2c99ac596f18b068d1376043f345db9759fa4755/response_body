$(document).ready(function(){
	//$.fn.addCmt();
	var itemId=1165;
  	$("#cmt").comments({
  		url:ctx+'/listComment',
  		param:{itemId:itemId,type:'item'},
  		total:"commentCount",
  		submit:function(opts){
  			var content = opts.content;
  			var pid = opts.pid;
  			if(content==""&&content.trim()==""){
  				$.fn.notify("温馨提示","请输入评论内容");
  				return ;
  			}
  			$.ajax({
  				url:ctx+"/addComment",
  				data:{itemId:itemId,content:content,type:'item',pid:pid},
  				dataType:"json",
  				type:"post",
